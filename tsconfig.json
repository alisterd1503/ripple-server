{
  "compilerOptions": {
    "target": "ES2020",                // Modern target for Node.js
    "module": "commonjs",             // Required for Node.js
    "outDir": "./dist",               // Compiled files go to `dist`
    "rootDir": "./src",               // Source files are in `src`
    "strict": true,                   // Strict type-checking
    "esModuleInterop": true,          // Interop for ES Modules
    "forceConsistentCasingInFileNames": true, // Avoid case-sensitivity issues
    "skipLibCheck": true,             // Skip type-checking for library .d.ts files
    "resolveJsonModule": true         // Allow importing JSON files
  },
  "include": ["src/**/*.ts"],          // Include all TypeScript files in `src`
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}